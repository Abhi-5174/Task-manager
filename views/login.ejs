<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Productivity Tracker</title>
    <link rel="shortcut icon" href="https://upload.wikimedia.org/wikipedia/donate/9/9b/Wfm-logo-white-circle.png" type="image/x-icon">
    <link rel="stylesheet" href="/style.css">
</head>

<body>

    <!-- Login Page -->
    <div class="auth-container">
        <div class="auth-box">
            <h2>Login</h2>
            <p style="color: red; height: 20px;"> 
                <% if(input) { %>
                    <span id="wrong_cred_text"> <%= input %> </span>
                    <%= input = null %>
                <% } %>
            </p>
            <form action="/login" method="POST">
                <div class="input-group" style="margin-bottom: 20px;">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required placeholder="Enter your email">
                </div>
                <div class="input-group" style="margin-bottom: 20px;">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required placeholder="Enter your password">
                </div>
                <button type="submit" class="auth-btn" style="margin-bottom: 20px;">Login</button>
                <p class="auth-footer">
                    Don't have an account? 
                    <a href="/register">Register here</a>
                </p>
            </form>
        </div>
    </div>
</body>

</html>

<script>

    const wrong_cred_text = document.getElementById('wrong_cred_text');

    if(wrong_cred_text){

        setTimeout(() => wrong_cred_text.style.display = "none", 2000);
    }

</script>